<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Chat Room</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div id="name-prompt">
    <h2>Enter your name:</h2>
    <input type="text" id="username" />
    <button onclick="joinRoom()">Join Room</button>
  </div>
  <div id="video-grid" style="display:none;"></div>
  <div id="controls" style="display:none;">
    <button onclick="toggleVideo()">Toggle Camera</button>
    <button onclick="toggleAudio()">Toggle Mic</button>
    <button onclick="invitePeople()">Invite</button>
  </div>
  <input type="text" id="invite-link" readonly style="display:none;"/>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script src="/script.js"></script>
</body>
</html>
